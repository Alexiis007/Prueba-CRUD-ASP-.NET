@model ContactoModel
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Editar Contacto
    </div>
    <div class="card-body">
        <form asp-action="Editar" asp-controller="Mantenedor" method="post">
            <input asp-for="IdContacto" type="hidden" class="form-control">
            <div class="form-group">
                <label>Nombre</label>
                <input asp-for="Nombre" type="text" class="form-control" placeholder="Ingresar nombre">
                <span asp-validation-fro="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Telefono</label>
                <input asp-for="Telefono" type="text" class="form-control" placeholder="Ingresar telefono">
                <span asp-validation-fro="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Correo</label>
                <input asp-for="Correo" type="text" class="form-control" placeholder="Ingresar correo">
                <span asp-validation-fro="Correo" class="text-danger"></span>
            </div>
            <button style="margin-top:10px" type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">Volver al listado.</a>
        </form>
    </div>
</div>